<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">
  <!-- RSF application scope Spring configuration file for the trivial "Hello
    World" application. This defines a single view, a single producer and a 
    single bean, and illustrates the completely minimal RSF application. In 
    fact, many beans appearing in blank-applicationContext.xml should *really*
    be overridden in addition to these. -->
<beans>
  <!-- Define the component producer for the main view -->
  <bean id="main-view" class="uk.org.ponder.rsf.helloapp.components.MainProducer">
  </bean>
  
  <!-- Add the main view producer into the collection -->
  <bean id="viewresolver" class="uk.org.ponder.rsf.view.ConcreteViewResolver">
    <property name="views">
      <list>
        <ref local="main-view"/>
      </list>
    </property>
  </bean>
  
  <!-- Define an default view which will be i) assumed on receiving a null
  pathinfo, ii) target of client redirect if a non-fatal exception occurs 
  (such as a bad incoming URL) -->
  <bean id="defaultView" class="java.lang.String">
    <constructor-arg>
      <value>/main</value>
    </constructor-arg>
  </bean>
  
  <!-- Define the bean roots from the request scope file that are accessible 
  via incoming request URL (not strictly necessary for this app -->
  <bean name="requestAddressibleBeans" class="uk.org.ponder.stringutil.StringList">
    <constructor-arg>
      <list>
        <value>hellobean</value>
      </list>
    </constructor-arg>
  </bean>
</beans>