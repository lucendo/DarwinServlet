<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

 <bean id="viewTemplateResolver"
    class="uk.org.ponder.rsf.templateresolver.BasicTemplateResolver">
    <property name="baseDirectory">
      <value>/templates/html/</value>
    </property>
    <property name="consumerInfo">
      <ref bean="consumerInfo" />
    </property>
  </bean>

  <bean id="itemCollection" factory-bean="itemCollectionManager" 
  factory-method="getItemCollection"/>
  
  <bean id="handlerHook" class="uk.org.ponder.darwin.rsf.DarwinHandlerHook">
    <property name="httpServletRequest">
      <ref bean="httpServletRequest" />
    </property>
    <property name="httpServletResponse">
      <ref bean="httpServletResponse" />
    </property>
    <property name="requestType">
      <ref bean="requestType" />
    </property>
    <property name="itemCollection">
      <ref bean="itemCollection" />
    </property>
    <property name="viewParameters">
      <ref bean="viewParameters" />
    </property>
    <property name="viewStateHandler" ref="viewStateHandler"></property>
    <property name="URLMapper">
      <ref bean="urlMapper"/>
    </property>
  </bean>
  
  <bean id="icmtrigger" class="uk.org.ponder.darwin.rsf.beans.ICMTrigger">
    <property name="itemCollectionManager">
      <ref bean="itemCollectionManager"/>
    </property>
  </bean>
</beans>