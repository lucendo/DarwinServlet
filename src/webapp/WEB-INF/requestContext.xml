<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="itemCollection" factory-bean="itemCollectionManager" 
  factory-method="getItemCollection"/>
  
  <bean id="handlerHook" class="uk.org.ponder.darwin.rsf.DarwinHandlerHook">
    <property name="httpServletRequest" ref="httpServletRequest"/>
    <property name="httpServletResponse" ref="httpServletResponse"/>
    <property name="requestType" ref="requestType"/>
    <property name="itemCollection" ref="itemCollection"/>
    <property name="viewParameters" ref="viewParameters"/>
    <property name="viewStateHandler" ref="viewStateHandler"/>
    <property name="URLMapper" ref="urlMapper"/>
  </bean>
  
  <bean id="icmtrigger" class="uk.org.ponder.darwin.rsf.beans.ICMTrigger">
    <property name="itemCollectionManager" ref="itemCollectionManager"/>
    <property name="indexItemSearcher" ref="indexItemSearcher"/>
  </bean>
   
</beans>